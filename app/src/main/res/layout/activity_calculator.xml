<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|number|numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="85dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textAlignment="textEnd"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/button_8" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_8" app:layout_constraintStart_toEndOf="@+id/button_7"
            app:layout_constraintEnd_toStartOf="@+id/button_9" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_9" app:layout_constraintStart_toEndOf="@+id/button_8" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toStartOf="@+id/button_div"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_div" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/button_9"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_7" app:layout_constraintEnd_toStartOf="@+id/button_5"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_5" app:layout_constraintStart_toEndOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_8" app:layout_constraintEnd_toStartOf="@+id/button_6"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_6" app:layout_constraintEnd_toStartOf="@+id/button_mul"
            app:layout_constraintStart_toEndOf="@+id/button_5" app:layout_constraintTop_toBottomOf="@+id/button_9"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_mul" app:layout_constraintStart_toEndOf="@+id/button_9"
            app:layout_constraintTop_toBottomOf="@+id/button_div" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_4" app:layout_constraintEnd_toStartOf="@+id/button_2"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_2" app:layout_constraintStart_toEndOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_5" app:layout_constraintEnd_toStartOf="@+id/button_3"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_3" app:layout_constraintStart_toEndOf="@+id/button_2"
            app:layout_constraintTop_toBottomOf="@+id/button_6" app:layout_constraintEnd_toStartOf="@+id/button_minus"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_minus" app:layout_constraintStart_toEndOf="@+id/button_3"
            app:layout_constraintTop_toBottomOf="@+id/button_mul" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_0" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="14dp"
            app:layout_constraintTop_toBottomOf="@+id/button_1" app:layout_constraintEnd_toStartOf="@+id/button_dot"
            android:layout_marginEnd="2dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_dot"
            app:layout_constraintTop_toBottomOf="@+id/button_2" android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@+id/button_0" app:layout_constraintEnd_toStartOf="@+id/button_eq"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_eq" app:layout_constraintStart_toEndOf="@+id/button_dot"
            app:layout_constraintTop_toBottomOf="@+id/button_3" app:layout_constraintEnd_toStartOf="@+id/button_plus"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_plus" app:layout_constraintStart_toEndOf="@+id/button_eq"
            app:layout_constraintTop_toBottomOf="@+id/button_minus" android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="353dp"
            android:layout_height="218dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/button_0"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/button_div" app:layout_constraintEnd_toStartOf="@+id/editText"
            android:layout_marginEnd="6dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.75"
            android:layout_marginStart="132dp"/>
</android.support.constraint.ConstraintLayout>